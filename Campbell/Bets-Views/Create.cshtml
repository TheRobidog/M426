
@model SportBet.Models.Bet
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Bets", FormMethod.Post,
    new { @class = "form" }))
{

    <div class="form-group"> 
    @Html.LabelFor(m => m.Title) 
    @Html.TextBoxFor(m => m.Title, new { @class = "form-control" }) 
    </div> 
    
    <div class="form-group"> 
    @Html.LabelFor(m => m.Title) 
    @Html.TextAreaFor(m => m.Title, 
    new { @class = "form-control", rows = 4 }) 
    </div>
    
    <div class="form-group"> 
    @Html.LabelFor(m => m.Odds) 
    @Html.EnumDropDownListFor(m => m.Genre, 
    new { @class = "form-control" }) 
    </div>













}